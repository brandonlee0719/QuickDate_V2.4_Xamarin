		<item name="android:textColor">@color/textIcon</item>
		<!--text-->
		<item name="android:textColorPrimary">#fafafa</item>

		<item name="android:textColorAlertDialogListItem">@color/textIcon</item>
		<item name="textColorAlertDialogListItem">@color/textIcon</item>
		<!--selection list-->
		<item name="android:textColorTertiary">#fafafa</item>
		<!--background-->
		<item name="android:background">#444444</item>
	</style>

