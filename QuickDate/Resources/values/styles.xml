	<style name="CustomTextdrawableStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16dp</item>
		<item name="android:layout_marginEnd">1dp</item>
		<item name="android:drawablePadding">16dp</item>
		<item name="android:paddingStart">10dp</item>
		<item name="android:paddingEnd">16dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
	</style>

	<style name="MyDialogTheme" parent="android:Theme.Dialog">
		<!-- Fill the screen -->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>

		<!-- No backgrounds, titles or window float -->
		<item name="android:windowBackground">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">false</item>


		<!-- Just to prove it's working -->
		<item name="android:background">#f7f7f7</item>
	</style>

	<style name="MyDialogThemeDark" parent="android:Theme.Dialog">
		<!-- Fill the screen -->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>

		<!-- No backgrounds, titles or window float -->
		<item name="android:windowBackground">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">false</item>

		<!-- Just to prove it's working -->
		<item name="android:background">#444444</item>
	</style>


	<style name="DarkHeader" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#8000ff</item>
		<item name="colorPrimaryDark">#303F9F</item>
		<item name="colorAccent">@color/textIcon</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
	</style>

	<style name="EditTextNormalStyle">
		<item name="android:textColorHint">#8f8f8f</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_gravity">start</item>
		<item name="android:paddingStart">15dp</item>
		<item name="android:textAlignment">viewStart</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="MenuTextStyle">
		<item name="android:textColor">@color/textIcon</item>
		<item name="android:textSize">13sp</item>
	</style>

	<style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/AppModalStyle</item>
		<!-- switch on thumb & track color -->
		<item name="colorControlActivated">@color/accent</item>
		<!-- switch off thumb color -->
		<item name="colorSwitchThumbNormal">#efefef</item>
		<item name="thumbTint">@color/accent</item>
		<!-- switch off track color -->
		<item name="android:colorForeground">#efefef</item>
		<item name="trackTint">#444</item>
	</style>

	<style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/rounded_dialog</item>
	</style>

	<style name="ProfileTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="colorPrimary">#9E000000</item>
		<item name="colorPrimaryDark">#000000</item>
		<item name="colorAccent">@color/accent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:statusBarColor">#b2b2b2</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowTranslucentStatus">true</item>
	</style>
	<style name="ProfileTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds" >true</item>
		<item name="android:windowTranslucentStatus">true</item>
	</style>
	<style name="tab_style_ProfileTheme" parent="TextAppearance.Design.Tab">
		<item name="textAllCaps">false</item>
		<item name="android:textSize">13sp</item>
	</style>

	<style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">16sp</item>
	</style>

	<!-- Customize color of navigation drawer icon and back arrow -->
	<style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="colorControlNormal">#888</item>
		<item name="actionMenuTextColor">#888</item>
		<item name="android:textColor">#444</item>
	</style>
	<style name="ToolbarThemeLight" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="colorControlNormal">#000000</item>
	</style>
	<style name="SwitchCompatTheme" parent="Preference.SwitchPreferenceCompat.Material">
		<item name="colorControlNormal">#efefef</item>
		<!-- switch on thumb & track color -->
		<item name="colorControlActivated">#efefef</item>

		<!-- switch off thumb color -->
		<item name="colorSwitchThumbNormal">#efefef</item>

		<item name="thumbTint">#efefef</item>

		<!-- switch off track color -->
		<item name="android:colorForeground">#efefef</item>

		<item name="trackTint">#efefef</item>

	</style>

	<style name="SwitchCompatThemeActivated" parent="Preference.SwitchPreferenceCompat.Material">
		<item name="colorControlNormal">#efefef</item>
		<!-- switch on thumb & track color -->
		<item name="colorControlActivated">@color/accent</item>

		<!-- switch off thumb color -->
		<item name="colorSwitchThumbNormal">#efefef</item>

		<item name="thumbTint">@color/accent</item>

		<!-- switch off track color -->
		<item name="android:colorForeground">#efefef</item>

		<item name="trackTint">#444</item>

	</style>

	<!--Floating label text style-->
	<style name="DefaultHintText" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/textIcon</item>
		<item name="android:textColorHint">@color/textIcon</item>
	</style>

	<!--Input field style-->
	<style name="DefaultEditText" parent="Theme.AppCompat.Light">
		<item name="colorControlNormal">@color/textIcon</item>
		<item name="colorControlActivated">#ff00b5</item>
	</style>
	<style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<!-- Hint color and label color in FALSE state -->
		<item name="android:textColorHint">@color/textIcon</item>

		<!-- Label color in TRUE state and bar color FALSE and TRUE State -->
		<item name="colorAccent">@color/textIcon</item>
		<item name="colorControlNormal">@color/textIcon</item>
		<item name="colorControlActivated">@color/textIcon</item>
	</style>
	<style name="ToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">16dp</item>
	</style>

	<style name="ToolbarSubtitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
		<item name="android:textSize">11dp</item>
	</style>

	<style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
		<!--buttons-->
		<item name="colorAccent">@color/textIcon</item>
