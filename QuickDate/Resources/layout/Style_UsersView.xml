<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:gravity="center"
    android:background="?attr/selectableItemBackground" >
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/people_profile_sos"
            android:scaleType="centerCrop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/no_profile_image_circle" />
        <refractored.controls.CircleImageView
            android:id="@+id/ImageLastseen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/textIcon"
            android:layout_alignBottom="@id/people_profile_sos"
            android:layout_marginBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="55dp"
            android:src="@drawable/green_color"
            android:layout_above="@id/people_profile_sos" />
    </RelativeLayout>
    <TextView
        android:id="@+id/people_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#6f6f6f"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/people_profile_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#b7b7b7"
        android:textSize="12sp"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginTop="5dp" />
    <at.markushi.ui.CircleButton
      android:id="@+id/action_button"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:padding="12dp"
      android:layout_centerHorizontal="true"
      android:tint="@color/white"
      app:cb_color="#f44336"
      app:cb_pressedRingWidth="1dp"
      android:src="@drawable/ic_action_remove_heart"
      android:layout_gravity="center" /> 
</LinearLayout>